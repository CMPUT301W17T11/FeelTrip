<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.henzoshimada.feeltrip.MainScreen"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ToggleButton
        android:id="@+id/toggleRecent"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_marginStart="12dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/editText3" />

    <ToggleButton
        android:id="@+id/toggleFriends"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="52dp" />

    <fragment
        android:id="@+id/fragent_frame"
        android:name="layout.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_blank"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </fragment>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="307dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/hintfilter" />


                <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleRecent"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@+id/navigation"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by: 7 days"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Filter by: friends" />

    <Spinner
        android:id="@+id/filterMood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleFriends"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/filterMood"
        android:layout_alignParentEnd="true"
        android:text="Filter by: moods" />


</RelativeLayout>
