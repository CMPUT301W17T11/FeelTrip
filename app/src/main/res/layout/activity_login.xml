<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.henzoshimada.feeltrip.loginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.henzoshimada.feeltrip.loginActivity"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/pass_text"
            android:layout_marginTop="220dp"
            android:hint="Please enter username: " />

        <EditText
            android:id="@+id/pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:hint="Please enter password: " />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkUser"
            android:text="Login"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text" />

        <Button
            android:id="@+id/reg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="regUser"
            android:text="Register"
            android:layout_alignTop="@+id/login_button"
            android:layout_alignEnd="@+id/user_text" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
