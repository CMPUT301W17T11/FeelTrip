<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark_material_light</item>
    </style>

    <style name="DefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>