<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GalaxyTheme" parent="DefaultTheme">
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <item name="android:colorPrimary">@color/transparent</item>
        <item name="android:alertDialogStyle">@style/GalaxyTheme.alertDialog</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorAccent">@color/galaxy_blue</item>
        <item name="android:textColorHint">@color/galaxy_blue</item>
        <item name="android:textColorPrimary">?android:attr/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:statusBarColor">@color/galaxy_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GalaxyTheme.alertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>